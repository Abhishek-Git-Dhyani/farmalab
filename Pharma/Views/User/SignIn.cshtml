@model User

<form>
    <div class="card card-body">
        <div class="row mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="row mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <hr />
        <button class="btn btn-info pb-3" style="width:150px"> Sin-In</button>
        <button class="btn btn-danger" asp-action="SignUp" style="width:150px">Sign-Up</button>
    </div>
</form>